{
  "name": "pi-elixir",
  "version": "0.2.0",
  "description": "BEAM runtime tools for pi â€” connects to the running Elixir app via Tidewave",
  "keywords": ["pi-package"],
  "license": "MIT",
  "files": ["extensions", "scripts", "skills", "README.md"],
  "scripts": {
    "lint": "oxlint extensions/",
    "fmt": "oxfmt --write extensions/ test/",
    "fmt:check": "oxfmt --check extensions/ test/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run test/integration/",
    "test:elixir": "elixir -r test/elixir/test_helper.exs -r test/elixir/tools_test.exs",
    "check": "oxlint extensions/ && oxfmt --check extensions/ test/"
  },
  "pi": {
    "extensions": ["./extensions/index.ts"],
    "skills": ["./skills"]
  },
  "peerDependencies": {
    "@mariozechner/pi-coding-agent": "*",
    "@mariozechner/pi-tui": "*",
    "@sinclair/typebox": "*"
  },
  "devDependencies": {
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "vitest": "^4.0.18"
  }
}
